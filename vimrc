set shell=/bin/bash
set nocompatible

if has('filetype')
    filetype indent plugin on
endif

if has('syntax')
    syntax on
endif

set number
set ruler

set autoindent 
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4
set textwidth=79

set wildmenu
set showcmd
set encoding=utf-8

set noswapfile
set fileformats=mac

set visualbell